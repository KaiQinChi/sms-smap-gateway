<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/SmapActionBar</item>
    </style>

    <style name="SmapActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/smap_green</item>
        <item name="android:titleTextStyle">@style/SmapActionBar.ActionBar.TitleTextStyle</item>
    </style>

    <style name="SmapActionBar.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="BaseFont">
        <item name="customFont">BPreplay.ttf</item>
    </style>

    <style name="BlueFont" parent="BaseFont">
        <item name="android:textColor">@color/smap_blue</item>
    </style>

    <style name="GreyFont" parent="BaseFont">
        <item name="android:textColor">@color/smap_light_grey</item>
    </style>

    <style name="DarkGreyFont" parent="BaseFont">
        <item name="android:textColor">@color/smap_dark_grey</item>
    </style>

</resources>