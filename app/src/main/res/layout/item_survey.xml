<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/smap_light_grey"
    android:paddingBottom="12dp" >

    <TextView
        android:id="@+id/txt_name"
        style="@style/DarkGreyFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="20dp"
        android:paddingBottom="14dp"
        android:singleLine="true"
        android:text="APRIL SUVREY"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_total_distribution"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="24dp"
        android:layout_marginTop="14dp"
        android:background="@color/smap_light_green"
        android:gravity="center"
        android:text="5"
        android:textColor="@color/smap_cream"
        android:textSize="30sp"
        android:textStyle="bold" />


</RelativeLayout>