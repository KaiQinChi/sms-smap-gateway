<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_marginRight="2dp"
    android:background="@color/smap_light_grey" >

    <TextView
        android:id="@+id/txt_name"
        style="@style/DarkGreyFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:paddingLeft="12dp"
        android:paddingTop="10dp"
        android:singleLine="true"
        android:text="MATT"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txt_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_name"
        android:layout_marginLeft="12dp"
        android:background="@color/smap_med_grey"
        android:paddingBottom="1dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingTop="1dp"
        android:text="0473 234 543"
        android:textColor="@color/smap_dark_grey"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/txt_completed_progress"
        style="@style/DarkGreyFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_name"
        android:layout_alignParentRight="true"
        android:paddingRight="12dp"
        android:paddingTop="12dp"
        android:text="5/26"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_number"
        android:layout_alignParentRight="true"
        android:layout_below="@id/txt_completed_progress"
        android:inputType="textCapCharacters"
        android:paddingRight="12dp"
        android:text="24/03, 1:00pm"
        android:textColor="@android:color/black"
        android:textSize="10dp" />

</RelativeLayout>