<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/smap_dark_grey"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt_survey_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingLeft="12dp"
        android:text="Survey Name"
        android:textColor="@color/smap_cream"
        android:textSize="22sp"
        android:textStyle="bold"
        android:singleLine="false" />

    <ListView
        android:id="@+id/list_distributions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/smap_med_grey"
        android:divider="@color/smap_dark_grey"
        android:dividerHeight="1dp" />

    <TextView
        android:id="@android:id/empty"
        android:layout_alignBottom="@+id/txt_survey_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text=" â€¢ Create a distribution by touching the top right icon"
        android:textColor="@color/smap_grey"
        android:background="@drawable/asdasd" />



</LinearLayout>