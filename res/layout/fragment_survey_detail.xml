<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/smap_med_grey"
    android:orientation="vertical" >

    <include layout="@layout/layout_survey_detail_info" />

    <ListView
        android:id="@+id/list_contacts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/list_vertical_margin"
        android:background="@drawable/bg_noise_tile"
        android:divider="@android:color/transparent"
        android:dividerHeight="8dp"
        android:paddingLeft="@dimen/list_horizontal_margin"
        android:paddingRight="@dimen/list_horizontal_margin"
        android:paddingTop="10dp" />

</LinearLayout>